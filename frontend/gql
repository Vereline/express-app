mutation createComment($commentData: CommentInput) {
      createComment(commentData: $commentData) {
				text
    		post
    		author
    }
}



mutation updateBlog($id: String!, $postData: PostInput) {
      updatePost(_id:$id,  postData: $postData) {
				postText
    		title
    }
}

