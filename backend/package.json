{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "extends": "eslint:recommended",
  "scripts": {
    "start": "npm run build && node dist/bin/www",
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "lint": "eslint 'src/**/*.js' --fix"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-graphql": "^0.9.0",
    "graphql": "^15.0.0",
    "http-errors": "~1.6.3",
    "mongodb": "^3.5.7",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.4",
    "pg": "^8.1.0",
    "pg-hstore": "^2.3.3",
    "pg-promise": "^10.5.5",
    "pug": "^2.0.4",
    "sequelize": "^5.21.8",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^7.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "standard": "^14.3.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier-eslint --write",
      "standard"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
